{
  "name": "psp-migration",
  "version": "1.0.0",
  "description": "> PodSecurityPolicy is dead, long live ???",
  "main": "src/index.ts",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "jest",
    "build": "npm-run-all build:**",
    "build:tsc": "tsc",
    "build:pkg": "pkg ."
  },
  "bin": {
    "psp-migrate": "./dist/run.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/appvia/psp-migration.git"
  },
  "author": "Chris Nesbitt-Smith",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/appvia/psp-migration/issues"
  },
  "homepage": "https://github.com/appvia/psp-migration#readme",
  "devDependencies": {
    "@kubernetes/client-node": "^0.16.1",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.11",
    "jest": "^27.4.3",
    "npm-run-all": "^4.1.5",
    "pkg": "^5.5.1",
    "ts-jest": "^27.1.0",
    "typescript": "^4.5.2"
  },
  "pkg": {
    "targets": [
      "alpine-arm64",
      "alpine-x64",
      "linux-arm64",
      "linux-x64",
      "linuxstatic-arm64",
      "linuxstatic-x64",
      "win-arm64",
      "win-x64",
      "macos-arm64",
      "macos-x64"
    ],
    "outputPath": "dist/bin"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!.**",
      "!src/__tests__/**",
      "!node_modules/**",
      "!coverage/**"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ],
    "coverageReporters": [
      "lcovonly",
      "text",
      "text-summary"
    ],
    "coverageDirectory": "coverage",
    "restoreMocks": true,
    "resetMocks": true
  },
  "wallaby": {
    "files": [
      "*.ts",
      "src/**/*.json",
      "src/**/*.ts",
      "!src/**/*.spec.ts",
      {
        "pattern": ".env",
        "instrument": false
      }
    ],
    "tests": [
      "src/**/*.spec.ts"
    ],
    "env": {
      "type": "node"
    },
    "testFramework": "jest"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}
