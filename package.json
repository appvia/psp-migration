{
  "name": "psp-migration",
  "version": "1.0.0",
  "description": "> PodSecurityPolicy is dead, long live ???",
  "main": "src/index.ts",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/appvia/psp-migration.git"
  },
  "author": "Chris Nesbitt-Smith",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/appvia/psp-migration/issues"
  },
  "homepage": "https://github.com/appvia/psp-migration#readme",
  "devDependencies": {
    "@kubernetes/client-node": "^0.16.1",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.11",
    "jest": "^27.4.3",
    "ts-jest": "^27.1.0",
    "typescript": "^4.5.2"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "** /*.ts",
      "**/*.js",
      "!.**",
      "!__tests__/**",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js",
      "!wallaby.js"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ],
    "coverageReporters": [
      "lcovonly",
      "text",
      "text-summary"
    ],
    "coverageDirectory": "coverage",
    "restoreMocks": true,
    "resetMocks": true
  },
  "wallaby": {
    "files": [
      "*.ts",
      "src/**/*.json",
      "src/**/*.ts",
      "!src/**/*.spec.ts",
      {
        "pattern": ".env",
        "instrument": false
      }
    ],
    "tests": [
      "src/**/*.spec.ts"
    ],
    "env": {
      "type": "node"
    },
    "testFramework": "jest"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}
